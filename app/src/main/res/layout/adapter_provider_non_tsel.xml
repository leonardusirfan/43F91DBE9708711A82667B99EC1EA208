<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding2"
    android:layout_marginLeft="@dimen/padding5"
    android:layout_marginRight="@dimen/padding5"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding10"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:weightSum="0.85">

            <TextView
                android:id="@+id/tv_item1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:padding="@dimen/padding5"
                android:text=""
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@drawable/style_box_rounded"
                android:orientation="horizontal"
                android:padding="@dimen/padding2"
                android:layout_marginLeft="@dimen/padding2">

                <EditText
                    android:id="@+id/edt_item1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/style_box_bordered_rounded"
                    android:ems="10"
                    android:hint="0"
                    android:gravity="right"
                    android:text=""
                    android:inputType="numberSigned"
                    android:digits="0123456789"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/padding5"
                    android:textSize="@dimen/text14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:layout_weight="0.2"
                android:background="@drawable/style_box_rounded"
                android:orientation="horizontal"
                android:padding="@dimen/padding2"
                android:layout_marginLeft="@dimen/padding2"
                android:layout_marginRight="@dimen/padding2">

                <EditText
                    android:id="@+id/edt_item2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/style_box_bordered_rounded"
                    android:ems="10"
                    android:hint="0"
                    android:gravity="right"
                    android:inputType="numberSigned"
                    android:digits="0123456789"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/padding5"
                    android:textSize="@dimen/text14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:layout_weight="0.2"
                android:background="@drawable/style_box_rounded"
                android:orientation="horizontal"
                android:padding="@dimen/padding2">

                <EditText
                    android:id="@+id/edt_item3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/style_box_bordered_rounded"
                    android:ems="10"
                    android:hint="0"
                    android:gravity="right"
                    android:inputType="numberSigned"
                    android:digits="0123456789"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/padding5"
                    android:textSize="@dimen/text14" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>