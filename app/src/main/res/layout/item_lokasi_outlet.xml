<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding10"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding10"
            android:paddingRight="@dimen/padding10">

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/txt_lokasi"
                app:layout_constraintEnd_toStartOf="@+id/txt_nama"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_nama">

                <ImageView
                    android:id="@+id/imageView26"
                    android:contentDescription="@string/akun"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/padding5"
                    app:srcCompat="@drawable/user" />

                <ImageView
                    android:id="@+id/imageView27"
                    android:contentDescription="@string/outlet"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/padding5"
                    app:srcCompat="@drawable/outlet_grey" />

                <ImageView
                    android:id="@+id/imageView28"
                    android:contentDescription="@string/kontak"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/padding5"
                    app:srcCompat="@drawable/phone_grey" />

                <ImageView
                    android:id="@+id/imageView29"
                    android:contentDescription="@string/lokasi"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/padding5"
                    app:srcCompat="@drawable/lokasi_grey" />

            </LinearLayout>

            <TextView
                android:id="@+id/btn_lokasi"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/edit_posisi"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text14"
                app:layout_constraintBottom_toBottomOf="@+id/txt_lokasi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="0.3"
                app:layout_constraintStart_toEndOf="@+id/txt_lokasi"
                app:layout_constraintTop_toTopOf="@+id/txt_lokasi" />

            <TextView
                android:id="@+id/txt_lokasi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding20"
                android:layout_marginTop="@dimen/padding5"
                android:textSize="@dimen/text14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_lokasi"
                app:layout_constraintHorizontal_weight="0.7"
                app:layout_constraintStart_toStartOf="@+id/txt_kontak"
                app:layout_constraintTop_toBottomOf="@+id/txt_kontak" />

            <TextView
                android:id="@+id/txt_kontak"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding10"
                android:textSize="@dimen/text14"
                app:layout_constraintBottom_toTopOf="@+id/txt_lokasi"
                app:layout_constraintEnd_toEndOf="@+id/txt_nama"
                app:layout_constraintStart_toStartOf="@+id/txt_nama"
                app:layout_constraintTop_toBottomOf="@+id/txt_alamat" />

            <TextView
                android:id="@+id/txt_alamat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding10"
                android:textSize="@dimen/text14"
                app:layout_constraintBottom_toTopOf="@+id/txt_kontak"
                app:layout_constraintEnd_toEndOf="@+id/txt_nama"
                app:layout_constraintStart_toEndOf="@+id/linearLayout8"
                app:layout_constraintTop_toBottomOf="@+id/txt_nama" />

            <TextView
                android:id="@+id/txt_nama"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding20"
                android:textSize="@dimen/text18"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="0.8"
                app:layout_constraintStart_toEndOf="@+id/linearLayout8"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>