<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding5"
    android:layout_marginTop="@dimen/padding5"
    android:layout_marginLeft="@dimen/padding5"
    android:layout_marginRight="@dimen/padding5"
    android:background="@drawable/btn_red">

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:buttonTint="@color/color_white"
        android:text=""
        android:id="@+id/cb_item1"
        android:textColor="@color/color_white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:text=""
            android:id="@+id/tv_item2"
            android:paddingLeft="@dimen/padding2"
            android:layout_marginBottom="@dimen/padding2"
            android:layout_marginLeft="@dimen/padding2"
            android:layout_marginRight="@dimen/padding2"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:text=""
            android:id="@+id/tv_item1"
            android:layout_marginBottom="@dimen/padding2"
            android:layout_marginLeft="@dimen/padding2"
            android:layout_marginRight="@dimen/padding2"
            android:gravity="right"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:text="Dibayar : "
            android:id="@+id/tv_bayar"
            android:paddingLeft="@dimen/padding2"
            android:layout_marginBottom="@dimen/padding2"
            android:layout_marginLeft="@dimen/padding2"
            android:layout_marginRight="@dimen/padding2"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:text=""
            android:layout_toRightOf="@id/tv_bayar"
            android:id="@+id/tv_item3"
            android:layout_marginBottom="@dimen/padding2"
            android:layout_marginLeft="@dimen/padding2"
            android:layout_marginRight="@dimen/padding2"
            android:gravity="right"/>

    </RelativeLayout>

</LinearLayout>